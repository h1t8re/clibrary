echo "Compiling C library\n\n";
gcc -Wall -c clib.c -o clib.o;
echo "\n\ndone\n\n";
echo "\n\nCompiling tests\n\n";
gcc -Wall -g test_strlen.c clib.o -o test_strlen;
gcc -Wall -g test_strdup.c clib.o -o test_strdup;
gcc -Wall -g test_strcontains.c clib.o -o test_strcontains;
gcc -Wall -g test_strcmp.c clib.o -o test_strcmp;
gcc -Wall -g test_strconcatenate.c clib.o -o test_strconcatenate;
gcc -Wall -g test_read_input.c clib.o -o test_read_input;
gcc -Wall -g test_read_file.c clib.o -o test_read_file;
gcc -Wall -g test_read_file_v1.c clib.o -o test_read_file_v1;
gcc -Wall -g test_find_string_position.c clib.o -o test_find_string_position;
gcc -Wall -g test_strsplit_v1.c clib.o -o test_strsplit_v1;
echo "\n\nExecuting tests\n\n";
./test_strlen;
./test_strdup;
./test_strcontains;
./test_strcmp;
./test_strconcatenate;
./test_read_file;
./test_read_file_v1;
./test_find_string_position;
./test_strsplit_v1;
./test_read_input;
echo "\n\ndone\n\n";
